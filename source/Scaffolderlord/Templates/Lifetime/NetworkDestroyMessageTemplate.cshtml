@using RazorLight
@using Scaffolderlord
@using Scaffolderlord.Models.Lifetime
@inherits TemplatePage<NetworkDestroyMessageTemplateModel>
using Common.Messaging;
using ProtoBuf;
@foreach (var item in Model.Usings)
{
	<text>using @item;</text>
}

namespace @Model.Namespace

@Model.XmlDoc($"An event published to clients, commanding them to destroy a {Model.TypeName}.")
[ProtoContract(SkipConstructor = true)]
internal class NetworkDestroy@(Model.TypeName) : ICommand
{
	[ProtoMember(1)]
	public string @(Model.TypeName)Id { get; }

	public NetworkDestroy@(Model.TypeName)(string @(Model.TypeName.CamelCase())Id)
	{
		@(Model.TypeName)Id = @(Model.TypeName.CamelCase())Id;
	}
}
